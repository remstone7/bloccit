
<h2>Sign Up confirmation</h2>
<h4>Please verify that these entries are correct.</h4>

<div class="row">
  <div class="col-md-4">
    <p>Name:  <%= @user.name %></p>
    <p>Email: <%= @user.email %></p>
  </div>
</div>

<div class="row">
  <div class="col-md-2">
  <%= button_to "Yes", {controller: "users", action: "create", params: params}, class: 'btn btn-success' %>
  </div>

  <div class="col-md-2">
    <%= button_to "no", {controller: "users", action: "new"}, class: 'btn btn-failure', :method => :get %>
  </div>
</div>