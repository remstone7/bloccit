<h1>New Advertisement</h1>

<div class="row">
  <div class="col-md-4">
    <p>Guidelines for Advertisement</p>
    <ul>
      <li>Don't put anything inappropriate</li>
      <li>It has to rhyme</li>
      <li>It needs to have a secret message</li>
    </ul>
  </div>
  <div class="col-md-8">
      <%= form_for @advertisement do |a| %>
      <div class="form-group">
          <%= a.label :title %>
          <%= a.text_field :title, class: 'form-control', placeholder: 'Enter ad title' %>
      </div>
      <div class="form-group">
        <%= a.label :body %>
        <%= a.text_area :body, rows: 8, class: 'form-control', placeholder: "Enter ad body" %>
      </div>
      <div class="form-group">
        <%= a.label :price %>
        <%= a.text_field :price, rows: 8, class: 'form-control', placeholder: "Enter ad price" %>
      </div>
      <div class="form-group">
        <%= a.submit "Save", class: 'btn btn-success' %>
      </div>
    <% end %>
  </div>
</div>
