<h1>New Question</h1>

<div class="row">
  <div class="col-md-12">
  <%= form_for @question do |q| %>
    <div class="form-group">
      <%= q.label :title %>
      <%= q.text_field :title, class: 'form-control', placeholder: "Enter post title" %>
    </div>
    <div class="form-group">
      <%= q.label :body %>
      <%= q.text_area :body, rows: 8, class: 'form-control', placeholder: "Enter post body" %>
    </div>
    <div class="form-group">
      <%= q.check_box :resolved %>
      <%= q.label :resolved %>
    </div>
    <div class="form-group">
      <%= q.submit "Save", class: 'btn btn-success' %>
    </div>
  <% end %>
  </div>
</div>
